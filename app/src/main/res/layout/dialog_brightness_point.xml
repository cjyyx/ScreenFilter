<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="光照强度(lux)"
            android:textSize="12sp" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <SeekBar
            android:id="@+id/sb_dialog_brightness_point_light"
            android:layout_width="180dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/tv_dialog_brightness_point_light"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="0 lux"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="128dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="当前传感器数值"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dialog_sensor_light"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="0 lux"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="屏幕亮度(%)"
            android:textSize="12sp" />

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <SeekBar
            android:id="@+id/sb_dialog_brightness_point_brightness"
            android:layout_width="180dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/tv_dialog_brightness_point_brightness"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="0 %"
            android:textSize="12sp" />

    </LinearLayout>

